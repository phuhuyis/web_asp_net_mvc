@{
    Layout = "~/Areas/Admin/Views/Shared/Layouts/LayoutAdmin.cshtml";
}
@model List<Website.Models.Slide>

<!DOCTYPE html>

<html>
<head>
</head>
<body>
    <!-- End Navbar -->

    <div class="container-fluid">
        <!--Table-->
        <div class="row mt-3">
            <div class="col">
                <div class="card">
                    <div class="card-header pb-0">
                        <div class="row">
                            <div class="col-lg-6 col-7">
                                <h6>Danh sách hình ảnh slide</h6>
                            </div>
                        </div>
                    </div>
                    <div class="card-body px-2 pb-2">
                        <!--Table-->
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="text-center align-middle">STT</th>
                                    <th class="text-center align-middle">Vị trí</th>
                                    <th class="text-center align-middle">Hình ảnh</th>
                                    <th class="text-center align-middle"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int index = 0;
                                }
                                @foreach (Website.Models.Slide item in Model)
                                {
                                    index++;
                                    <tr>
                                        <td scope="row" class="text-center align-middle">@index</td>
                                        <td scope="row" class="text-center align-middle">@item.position</td>
                                        <td class="text-center align-middle">
                                            <img src="@item.url" width="350px" />
                                        </td>
                                        <td class="text-center align-middle">
                                            <input type="file" class="actual-btn" hidden data-id="@item.id" />
                                            <button class="btn btn-success btn-update-slide" data-icon="@index" data-id="@item.id">
                                                <i class="far fa-edit"></i>
                                                Cập nhập hình ảnh
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
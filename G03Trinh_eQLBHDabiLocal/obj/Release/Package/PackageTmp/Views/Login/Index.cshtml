
@{
    Layout = "~/Views/Shared/Layouts/LayoutWeb.cshtml";
}
@model Website.Models.Account

<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="~/Resources/web/css/login.css">
</head>

<body>
    <div class="login-form mt-0">
        <div class="container p-0">
            <div class="container-fluid">
                <div class="login d-flex align-items-center py-5">
                    <div class="container">
                        <div class="row">
                            <div class="col mx-auto p-0">
                                <h1 class="h3 mb-0 text-gray-800 text-center mb-3">ĐĂNG NHẬP</h1>
                                @if (ViewBag.error != null)
                                {
                                    <div class="alert alert-danger" role="alert">
                                        @ViewBag.error
                                    </div>
                                }

                                <!-- Sign In Form -->
                                @using (Html.BeginForm(FormMethod.Post))
                                {
                                    <div class="mb-3 form-group">
                                        @Html.LabelFor(model => model.username, new { @for = "user" })
                                        @Html.TextBoxFor(model => model.username, new { @class = "form-control", @id = "user", @placeholder = "Nhập tên tài khoản..." })
                                        @Html.ValidationMessageFor(model => model.username, "", new
                                                                      {
                                                                          @class = "text-danger"
                                                                      })
                                    </div>
                                    <div class="form-group mb-3">
                                        @Html.LabelFor(model => model.password, new { @for = "floatingPassword" })
                                        @Html.TextBoxFor(model => model.password, new
                                   {
                                       @class = "form-control",
                                       @id = "floatingPassword",
                                       @placeholder = "Nhập mật khẩu...",
                                       @type = "password"
                                   })
                                        @Html.ValidationMessageFor(model => model.password, "", new
                                                                      {
                                                                          @class = "text-danger"
                                                                      })
                                    </div>
                                    <div class="d-grid">
                                        <button class="btn btn-lg btn-outline-dark out btn-login text-uppercase fw-bold mb-2" type="submit">Đăng nhập</button>
                                        <div class="text-center">
                                            <span class="small">Nếu chưa có tài khoản xin vui lòng </span>
                                            <a class="small" href="/signup">Đăng ký.</a>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @if (ViewBag.success != null)
    {
        <script>
            Swal.fire({
                title: "Thông báo",
                text: "@Html.Raw(ViewBag.success)",
                icon: "success"
            }).then((value) => {
                document.location.href = "/home";
            })
        </script>
    }
</body>

</html>
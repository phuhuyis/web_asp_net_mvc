@model List<Website.Models.Category>

<div class="container px-0 d-flex" style="width: 400px">
    
</div>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container px-0">
        <a class="navbar-brand" href="/home">
            <img src="~/Resources/web/img/logo_sneakershop.png" width="50px" height="50px" class="bg-dark">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle font-weight-bold text-white" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Hãng</a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                        @foreach (var item in Model)
                        {
                            <li><a class="dropdown-item font-weight-bold" href="/category/@item.metatitle">@item.name</a></li>
                        }
                    </ul>
                </li>
                <li class="nav-item"><a class="nav-link font-weight-bold text-white" href="/intro">Giới thiệu</a></li>
                <li class="nav-item"><a class="nav-link font-weight-bold text-white" href="/contact">Liên hệ</a></li>
                <li class="nav-item"><a class="nav-link font-weight-bold text-white" href="/bill">Đơn hàng</a></li>
                <li class="nav-item dropdown">
                    @if (Website.Common.Session.getSession(Website.Common.Constant.userSession) != null
                        && (Website.Common.Session.getSession(Website.Common.Constant.userSession) as Website.Models.Account).permission == 0)
                    {
                        <a class="nav-link dropdown-toggle font-weight-bold text-white" id="account" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Tài khoản</a>
                        <ul class="dropdown-menu" aria-labelledby="account">
                            <li><a class="dropdown-item font-weight-bold" href="/account/edit">Cập nhập thông tin</a></li>
                            <li><a class="dropdown-item logout font-weight-bold" href="/logout">Đăng xuất</a></li>
                        </ul>
                    }
                    else
                    {
                        <a class="nav-link font-weight-bold text-white" href="/login">
                            Đăng nhập
                        </a>
                    }
                </li>
            </ul>
            <div class="col p-0 ml-auto d-flex justify-content-end">
                <form class="form-inline mr-0 my-lg-0 d-flex" action="/search" method="get">
                    <input class="form-control mr-sm-2" type="search" placeholder="Nhập Tên Giày..."
                           aria-label="Search" name="key" style="width: 300px">
                    <button class="btn btn-outline-light my-sm-0" type="submit">Tìm Kiếm</button>
                </form>
                <form class="ml-2">
                    <a href="/cart" class="btn btn-outline-light">
                        <i class="bi-cart-fill me-1"></i>
                        Giỏ hàng
                        <span class="badge bg-dark text-white ms-1 rounded-pill" id="cart-count">0</span>
                    </a>
                </form>
            </div>
        </div>
    </div>
</nav>

@{
    Layout = "~/Areas/Admin/Views/Shared/Layouts/LayoutAdmin.cshtml";
}
@model G03Trinh_eQLBHDabiLocal.Models.Account

<!DOCTYPE html>

<html>
<head>
</head>
<body>
    <div class="container-fluid">
        <div class="text-center">
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h1 class="h3 mb-0 text-gray-800">Thêm tài khoản quản trị</h1>
            </div>
        </div>
        @if (ViewBag.error != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.error
            </div>
        }
        @if (ViewBag.success != null)
        {
            <div class="alert alert-success" role="alert">
                @ViewBag.success
            </div>
        }
        @using (Html.BeginForm(FormMethod.Post))
        {
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(model => model.username, new { @for = "username" })
                @Html.TextBoxFor(model => model.username, new
           {
               @class = "form-control",
               @id = "username",
               @placeholder = "Nhập tài khoản..."
           })
                @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.password, new { @for = "password" })
                @Html.TextBoxFor(model => model.password, new
           {
               @class = "form-control",
               @id = "password",
               @placeholder = "Nhập mật khẩu..."
           })
                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
            </div>
            <button type="submit" class="btn btn-primary mb-2">Thêm tài khoản</button>
        }
    </div>
</body>
</html>